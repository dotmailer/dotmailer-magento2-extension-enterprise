<?xml version="1.0" encoding="UTF-8"?>

<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="DotdigitalFormBlockShowsInactiveMessageIfApiIsNotEnabledTest">
        <annotations>
            <features value="Dotdigital for Magento Commerce module"/>
            <stories value="Dotdigital form content type for Page Builder"/>
            <title value="Test the inactive state of the Dotdigital form content type"/>
            <description value="If there is no Dotdigital API connection, the content type will display a notice when dragged to the stage."/>
            <severity value="AVERAGE"/>
            <group value="dotdigitalCommerce"/>
        </annotations>
        <before>
            <actionGroup ref="AdminLoginActionGroup" stepKey="loginAsAdmin"/>
            <actionGroup ref="navigateToAPageWithPageBuilder" stepKey="navigateToAPageWithPageBuilder"/>
            <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
            <actionGroup ref="dragContentTypeToStage" stepKey="dragRowToRootContainer">
                <argument name="contentType" value="PageBuilderRowContentType"/>
                <argument name="containerTargetType" value="PageBuilderRootContainerContentType"/>
            </actionGroup>
        </before>
        <after>
            <actionGroup ref="AdminLogoutActionGroup" stepKey="logoutAdminUserAfterTest"/>
        </after>
        <actionGroup ref="expandPageBuilderPanelMenuSection" stepKey="expandPageBuilderPanelMenuSection">
            <argument name="contentType" value="PageBuilderDotdigitalFormsContentType"/>
        </actionGroup>
        <actionGroup ref="dragContentTypeToStage" stepKey="dragDotdigitalFormIntoStage">
            <argument name="contentType" value="PageBuilderDotdigitalFormsContentType"/>
        </actionGroup>
        <seeElement stepKey="seeErrorSelector" selector="{{FormsOnFrontend.warningMessage}}"/>
        <actionGroup ref="openPageBuilderEditPanel" stepKey="openEditAfterDrop">
            <argument name="contentType" value="PageBuilderDotdigitalFormsContentType"/>
        </actionGroup>
        <seeElement stepKey="seeErrorSelector2" selector="{{FormsOnFrontend.warningMessage}}"/>
    </test>
</tests>
